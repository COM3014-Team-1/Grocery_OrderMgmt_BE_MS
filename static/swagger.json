{
  "openapi": "3.0.0",
  "info": {
    "title": "Order Management API",
    "version": "1.0.0",
    "description": "API for managing user orders and cart."
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/cart/{user_id}": {
      "get": {
        "summary": "Get Cart for a User",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Cart items for the user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Cart" }
                }
              }
            }
          }
        }
      }
    },
    "/cart": {
      "post": {
        "summary": "Add Item to Cart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RequestCart" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item added to cart",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ResponseCart" }
              }
            }
          }
        }
      }
    },
    "/cart/{product_id}": {
      "put": {
          "summary": "Update Cart Item Quantity",
          "parameters": [
            {
              "name": "product_id",
              "in": "path",
              "required": true,
              "schema": { "type": "string", "format": "uuid" }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CartItemUpdate" }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Cart item updated",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/Cart" }
                }
              }
            }
          }
        } 
    },  
    "/cartItems": {
      "delete": {
        "summary": "Remove Item from Cart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RemoveFromCart" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cart items for the user",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RemoveCartItemResponse" }
              }
            }
          }
        }
      }
      
    },
    "/orders": {
      "post": {
        "summary": "Create an Order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Order" }
            }
          }
        },
        "responses": {
          "201": { "description": "Order created successfully" }
        }
      }
    },
    "/orders/{order_id}": {
      "get": {
        "summary": "Get Order by ID",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Order details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Order" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Order Status",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateOrder" }
            }
          }
        },
        "responses": {
          "200": { "description": "Order status updated" }
        }
      },
      "delete": {
        "summary": "Cancel an Order",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Order cancelled" }
        }
      }
    },
    "/users/{user_id}/orders": {
      "get": {
        "summary": "Get All Orders for a User",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of user's orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Order" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCart": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "product_id": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer", "minimum": 1 },
          "unit_price": { "type": "number", "format": "float" }
        }
      },
      "ResponseCart": {
        "type": "object",
        "properties": {
          "cart_id": { "type": "string", "format": "uuid" },
          "user_id": { "type": "string" },
          "product_id": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer", "minimum": 1 },
          "unit_price": { "type": "number", "format": "float" }
        }
      },
      "RemoveFromCart": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "products": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "RemoveCartItemResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "products": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },

      "CartItemUpdate": {
        "type": "object",
        "properties": {
          "quantity": { "type": "integer", "minimum": 1 }
        },
        "required": ["quantity"]
      },
      "UpdateOrder": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "order_status": { "type": "string" }
        },
        "required": ["user_id", "order_status"]
      },
      "Order": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "total_amount": { "type": "number", "format": "float" },
          "shipping_address": { "type": "string" },
          "order_items": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/OrderItem" }
          }
        },
        "required": ["user_id", "total_amount", "order_items"]
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "product_id": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer", "minimum": 1 },
          "unit_price": { "type": "number", "format": "float" }
        },
        "required": ["product_id", "quantity", "unit_price"]
      },
      "Cart": {
        "type": "object",
        "properties": {
          "cart_id": { "type": "string", "format": "uuid" },
          "user_id": { "type": "string" },
          "product_id": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer" },
          "unit_price": { "type": "number", "format": "float" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
